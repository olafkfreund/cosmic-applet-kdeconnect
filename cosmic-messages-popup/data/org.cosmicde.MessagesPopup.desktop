[Desktop Entry]
Name=COSMIC Messages
Comment=Web-based messaging interface for COSMIC Connect
Keywords=messages;sms;rcs;whatsapp;telegram;chat;
Exec=cosmic-messages-popup
Icon=org.cosmicde.MessagesPopup
Terminal=false
Type=Application
Categories=Network;Chat;InstantMessaging;
StartupNotify=true
DBusActivatable=true

[Desktop Action GoogleMessages]
Name=Open Google Messages
Exec=cosmic-messages-popup --messenger google-messages --show

[Desktop Action WhatsApp]
Name=Open WhatsApp
Exec=cosmic-messages-popup --messenger whatsapp --show

[Desktop Action Telegram]
Name=Open Telegram
Exec=cosmic-messages-popup --messenger telegram --show
