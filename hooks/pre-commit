#!/bin/bash
#
# Pre-commit hook for cosmic-applet-kdeconnect
# This hook runs automatic code formatting and checks before each commit
#
# To install: just install-hooks
# To bypass (not recommended): git commit --no-verify

set -e

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

echo -e "${BLUE}üîç Running pre-commit checks...${NC}\n"

# Track if any check fails
CHECKS_FAILED=0

# Function to print status
print_status() {
    if [ $1 -eq 0 ]; then
        echo -e "${GREEN}‚úì${NC} $2"
    else
        echo -e "${RED}‚úó${NC} $2"
        CHECKS_FAILED=1
    fi
}

# 1. Check for files to commit
if git diff --cached --quiet; then
    echo -e "${YELLOW}‚ö†${NC}  No files staged for commit"
    exit 0
fi

# 2. Format check (cargo fmt)
echo -e "${BLUE}üìù Checking code formatting...${NC}"
if cargo fmt --all -- --check > /dev/null 2>&1; then
    print_status 0 "Code formatting is correct"
else
    echo -e "${YELLOW}‚ö†${NC}  Code formatting issues found. Auto-formatting..."
    cargo fmt --all

    # Stage the formatted files
    git diff --name-only | grep "\.rs$" | while read -r file; do
        if [ -f "$file" ]; then
            git add "$file"
            echo -e "  ${GREEN}+${NC} Formatted and staged: $file"
        fi
    done

    print_status 0 "Code auto-formatted and staged"
fi

# 3. Lint check (cargo clippy)
echo -e "\n${BLUE}üîé Running clippy linter...${NC}"
if cargo clippy --all-targets --all-features -- -D warnings > /dev/null 2>&1; then
    print_status 0 "No clippy warnings"
else
    print_status 1 "Clippy found issues"
    echo -e "\n${YELLOW}Run 'cargo clippy --all-targets --all-features' to see details${NC}"
fi

# 4. Build check (cargo check)
echo -e "\n${BLUE}üî® Checking if code compiles...${NC}"
if cargo check --all-targets --all-features > /dev/null 2>&1; then
    print_status 0 "Code compiles successfully"
else
    print_status 1 "Compilation errors found"
    echo -e "\n${YELLOW}Run 'cargo check' to see details${NC}"
fi

# 5. Test check (optional, can be slow)
if [ "${SKIP_TESTS}" != "1" ]; then
    echo -e "\n${BLUE}üß™ Running tests...${NC}"
    if cargo test --all > /dev/null 2>&1; then
        print_status 0 "All tests passed"
    else
        print_status 1 "Some tests failed"
        echo -e "\n${YELLOW}Run 'cargo test' to see details${NC}"
        echo -e "${YELLOW}To skip tests: SKIP_TESTS=1 git commit${NC}"
    fi
else
    echo -e "\n${YELLOW}‚è≠${NC}  Skipping tests (SKIP_TESTS=1)"
fi

# 6. Check for debugging code
echo -e "\n${BLUE}üêõ Checking for debugging code...${NC}"
STAGED_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep "\.rs$" || true)
if [ -n "$STAGED_FILES" ]; then
    DEBUG_PATTERNS=("println!" "dbg!" "eprintln!" "todo!()" "unimplemented!()")
    FOUND_DEBUG=0

    for file in $STAGED_FILES; do
        for pattern in "${DEBUG_PATTERNS[@]}"; do
            if git diff --cached "$file" | grep -E "^\+.*${pattern}" > /dev/null; then
                if [ $FOUND_DEBUG -eq 0 ]; then
                    echo -e "${YELLOW}‚ö†${NC}  Found debugging code:"
                    FOUND_DEBUG=1
                fi
                echo -e "  ${YELLOW}-${NC} $file contains: $pattern"
            fi
        done
    done

    if [ $FOUND_DEBUG -eq 0 ]; then
        print_status 0 "No debugging code found"
    else
        echo -e "\n${YELLOW}Consider removing debugging code before committing${NC}"
        echo -e "${YELLOW}To proceed anyway: git commit --no-verify${NC}"
        CHECKS_FAILED=1
    fi
else
    print_status 0 "No Rust files to check"
fi

# 7. Check for unwrap/expect in new code
echo -e "\n${BLUE}‚ö†Ô∏è  Checking for unwrap/expect...${NC}"
if [ -n "$STAGED_FILES" ]; then
    FOUND_UNWRAP=0

    for file in $STAGED_FILES; do
        # Check for unwrap() or expect() in added lines
        if git diff --cached "$file" | grep -E "^\+.*\.(unwrap|expect)\(" > /dev/null; then
            if [ $FOUND_UNWRAP -eq 0 ]; then
                echo -e "${YELLOW}‚ö†${NC}  Found unwrap/expect in new code:"
                FOUND_UNWRAP=1
            fi
            echo -e "  ${YELLOW}-${NC} $file contains unwrap() or expect()"
        fi
    done

    if [ $FOUND_UNWRAP -eq 0 ]; then
        print_status 0 "No unwrap/expect in new code"
    else
        echo -e "\n${YELLOW}Consider using proper error handling instead of unwrap/expect${NC}"
        echo -e "${YELLOW}See ACCEPTANCE_CRITERIA.md for guidelines${NC}"
        echo -e "${YELLOW}To proceed anyway: git commit --no-verify${NC}"
        CHECKS_FAILED=1
    fi
fi

# Final result
echo ""
if [ $CHECKS_FAILED -eq 0 ]; then
    echo -e "${GREEN}‚úÖ All pre-commit checks passed!${NC}"
    echo -e "${GREEN}   Proceeding with commit...${NC}\n"
    exit 0
else
    echo -e "${RED}‚ùå Pre-commit checks failed!${NC}"
    echo -e "${RED}   Please fix the issues above before committing${NC}"
    echo -e "\n${YELLOW}To bypass (not recommended): git commit --no-verify${NC}\n"
    exit 1
fi
